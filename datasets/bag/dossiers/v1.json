{
  "id": "dossiers",
  "type": "table",
  "version": "1.0.2",
  "status": "stable",
  "description": "Een DOSSIER houdt de wijzigingen van een object bij en bevat daarom één of meer brondocumenten",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "identifier": "dossier",
    "required": [
      "schema",
      "dossier"
    ],
    "display": "dossier",
    "properties": {
      "schema": {
        "$ref": "https://schemas.data.amsterdam.nl/schema@v4.0.0#/definitions/schema"
      },
      "dossier": {
        "type": "string",
        "title": "Dossier ID",
        "description": "Verwijzing vanuit de overige objectklassen"
      },
      "heeftBrondocumenten": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "documentnummer": {
              "type": "string"
            }
          }
        },
        "relation": "bag:brondocumenten",
        "title": "Dossier heeft brondocumenten",
        "description": "De brondocument(en) behorende bij het dossier"
      }
    }
  }
}
