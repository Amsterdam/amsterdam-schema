            "id"
          ],
        "required": [
            "schema",
            "id"
        ],
        "display": "id",
        "properties": {
            "schema": {
                "$ref": "https://schemas.data.amsterdam.nl/schema@v2#/definitions/schema"
            },
            "id": {
                "type": "string",
                "description": "Unieke aanduiding van het record."
            },
            "gbdBuurt": {
                "type": "string",
