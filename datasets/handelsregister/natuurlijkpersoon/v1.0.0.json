{
  "id": "natuurlijkpersoon",
  "type": "table",
  "version": "1.0.0",
  "shortname": "nps",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "identifier": [
      "identificatie",
      "volgnummer"
    ],
    "required": [
      "schema",
      "identificatie",
      "volgnummer"
    ],
    "display": "id",
    "properties": {
      "schema": {
        "$ref": "https://schemas.data.amsterdam.nl/schema@v1.3.0#/definitions/schema"
      },
      "identificatie": {
        "type": "string",
        "description": "identificatie dit kan een KvK-nummer, BSN-nummer, RSIN-nummer zijn"
      },
      "volgnummer": {
        "type": "integer",
        "description": "volgnummer van de identificatie"
      },
      "datumActueelTot": {
        "type": "string",
        "format": "date-time",
        "description": "einddatum van de cyclus, eventueel in combinatie met het kenmerk Status"
      },
      "heeftWoondadres": {
        "type": "object",
        "properties": {
          "identificatie": {
            "type": "string"
          }
        },
        "relation": "handelsregister:locaties",
        "description": "heeft woonadres"
      },
      "natuurlijkPersoonid": {
        "type": "object",
        "format": "json",
        "properties": {
          "heeftBSN": {
            "type": "object",
            "properties": {
              "identificatie": {
                "type": "string"
              }
            },
            "$comment": "relation brp:burgerservicenummer",
            "description": "burgerservicenummer (BSN) van de NP"
          },
          "geboortedatum": {
            "type": "string",
            "format": "date",
            "description": "geboortedatum van de niet GBA-gekoppelde NP"
          },
          "geboorteland": {
            "type": "string",
            "description": "geboorteland van de niet GBA-gekoppelde NP"
          },
          "geslachtsnaam": {
            "type": "string",
            "description": "geslachtsnaam van de niet GBA-gekoppelde NP"
          },
          "heeftvoornamen": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "voornaam": {
                  "type": "string"
                }
              }
            },
            "description": "voornamen van de niet GBA-gekoppelde NP"
          },
          "voorvoegselGeslachtsnaam": {
            "type": "string",
            "description": "voorvoegsel van de geslachtwnaam van de niet GBA-gekoppelde NP"
          }
        }
      },
      "geslachtsnaam": {
        "type": "string",
        "description": "geslachtsnaam van de NP"
      },
      "voorvoegselGeslachtsnaam": {
        "type": "string",
        "description": "eventuele voorvoegsels van de naam van de NP"
      },
      "voornamen": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "voornaam": {
              "type": "string"
            }
          }
        },
        "description": "voornaam of voornamen van de NP"
      },
      "geslachtsaanduiding": {
        "type": "string",
        "description": "geslachtsaanduiding van de NP conform de GBA"
      },
      "geboortedatum": {
        "type": "string",
        "format": "date",
        "description": "geboortedatum van de NP"
      },
      "geboorteplaats": {
        "type": "string",
        "description": "plaats waar de betreffende NP is geboren"
      },
      "geboorteland": {
        "type": "string",
        "description": "land waar de NP geboren is"
      },
      "overlijdensdatum": {
        "type": "string",
        "format": "date",
        "description": "overlijdensdatum van de NP"
      },
      "adellijkeTitel": {
        "type": "string",
        "description": "adellijke titel van de NP"
      },
      "aanduidingNaamgebruik": {
        "type": "string",
        "description": "gegevens over de wijze van aanschrijving, eigennaam, partnernaam, partnernaam na eigennaam, partnernaam voor eigennaam"
      },
      "geslachtsnaamPartner": {
        "type": "string",
        "description": "gevuld indien aanduiding naamgebruik ongelijk is aan eigen geslachtsnaam"
      },
      "voorvoegselGeslachtsnaamPartner": {
        "type": "string",
        "description": "Voorvoegsels van de geslachtsnaam van de partner, wordt gebruikt bij de opbouw van de naam (afhankelijk van het naamgebruik)"
      }
    }
  }
}
