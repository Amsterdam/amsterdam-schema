{
  "id": "referentiepunten",
  "type": "table",
  "version": "2.1.1",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "mainGeometry": "geometrie",
    "identifier": "identificatie",
    "required": [
      "schema",
      "identificatie"
    ],
    "display": "identificatie",
    "properties": {
      "schema": {
        "$ref": "https://schemas.data.amsterdam.nl/schema@v1.3.0#/definitions/schema"
      },
      "identificatie": {
        "type": "string",
        "description": "Unieke identificatie van de meting"
      },
      "nabijAdres": {
        "type": "string",
        "description": "Beschrijving van de een nabij adres"
      },
      "locatie": {
        "type": "string",
        "description": "Beschrijving van de locatie van het referentiepunt bijv 'nabij noordoostelijke gevelhoek'."
      },
      "hoogteTovNap": {
        "type": "number",
        "multipleOf": 0.0001,
        "description": "Hoogte van het referentiepunt t.o.v. NAP (m)"
      },
      "datum": {
        "type": "string",
        "format": "date",
        "description": "Datum van plaatsing van het referentiepunt."
      },
      "status": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "omschrijving": {
            "type": "string"
          }
        },
        "description": "Status van het referentiepunt (1=actueel, 2=niet te meten, 3=vervallen)"
      },
      "vervaldatum": {
        "type": "string",
        "format": "date",
        "description": "Vervaldatum van het referentiepunt."
      },
      "merk": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "omschrijving": {
            "type": "string"
          }
        },
       "description": "Merk van het referentiepunt."
      },
      "xCoordinaatMuurvlak": {
        "type": "integer",
        "description": "X-coördinaat muurvlak"
      },
      "yCoordinaatMuurvlak": {
        "type": "integer",
        "description": "Y-coördinaat muurvlak"
      },
      "windrichting": {
        "type": "string",
        "description": "Windrichting"
      },
      "ligtInGebiedenBouwblok": {
        "type": "object",
        "properties": {
          "identificatie": {
            "type": "string"
          },
          "volgnummer": {
            "type": "integer"
          },
          "beginGeldigheid": {
            "type": "string",
            "format": "date-time"
          },
          "eindGeldigheid": {
            "type": "string",
            "format": "date-time"
          }
        },
        "relation": "gebieden:bouwblokken",
        "description": "Het bouwblok waarbinnen het referentiepunt ligt"
      },
      "ligtInGebiedenBuurt": {
        "type": "object",
        "properties": {
          "identificatie": {
            "type": "string"
          },
          "volgnummer": {
            "type": "integer"
          },
          "beginGeldigheid": {
            "type": "string",
            "format": "date-time"
          },
          "eindGeldigheid": {
            "type": "string",
            "format": "date-time"
          }
        },
        "relation": "gebieden:buurten",
        "description": "De buurt waarbinnen het referentiepunt ligt"
      },
      "ligtInGebiedenStadsdeel": {
        "type": "object",
        "properties": {
          "identificatie": {
            "type": "string"
          },
          "volgnummer": {
            "type": "integer"
          },
          "beginGeldigheid": {
            "type": "string",
            "format": "date-time"
          },
          "eindGeldigheid": {
            "type": "string",
            "format": "date-time"
          }
        },
        "relation": "gebieden:stadsdelen",
        "description": "Het stadsdeel waarbinnen het referentiepunt ligt"
      },
      "geometrie": {
        "$ref": "https://geojson.org/schema/Point.json",
        "description": "Geometrische ligging van de meetbout"
      },
      "isNapPeilmerk": {
        "type": "object",
        "properties": {
          "identificatie": {
            "type": "string"
          }
        },
        "relation": "nap:peilmerken",
        "description": "Het NAP-peilmerk dat het referentiepunt kan zijn."
      },
      "datumActueelTot": {
        "type": "string",
        "format": "date-time",
        "description": "Einddatum van de cyclus, eventueel in combinatie met het kenmerk Status"
      },
      "publiceerbaar": {
        "type": "boolean",
        "description": "Publiceerbaar ja of nee"
      }
    }
  }
}
