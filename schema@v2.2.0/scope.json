{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/scope@v2.2.0",
  "type": "object",
  "required": [
    "name",
    "id",
    "type",
    "owner",
    "nonProductiePackage",
    "productiePackage"
  ],
  "properties": {
    "type": {
      "const": "scope"
    },
    "name": {
      "description": "Naam van de scope.",
      "type": "string",
      "minLength": 1
    },
    "id": {
      "description": "ID van de scope.",
      "type": "string",
      "minLength": 1,
      "pattern": "[A-Za-z/]"
    },
    "nonProductiePackage": {
      "description": "Naam van het Access Package dat in niet-productieomgevingen gebruikt wordt.",
      "type": "string",
      "pattern": "^EM4W-DATA-schemascope-ot-scope_[a-z_]*$"
    },
    "productiePackage": {
      "description": "Naam van het Access Package dat in de productieomgeving gebruikt wordt.",
      "type": "string",
      "pattern": "^EM4W-DATA-schemascope-p-scope_[a-z_]*$"
    },
    "owner": {
      "description": "id van het team dat de data beheert in de DataHub (doorgaans het datateam). Zie /publishers voor de mogelijke ids.",
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "type": "string",
          "format": "uri-reference"
        },
        "additionalProperties": false
      }
    }
  }
}
