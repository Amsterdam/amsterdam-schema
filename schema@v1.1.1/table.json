{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/table@v1.1.1",
  "type": "object",
  "temporal": {
    "type": "object",
    "required": ["identifier", "dimensions"],
    "identifier": "string",
    "unit": "string",
    "dimensions": {
      "type": "object",
      "geldigOp": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 2,
        "maxItems": 2
      }
    }
  },
  "allOf": [
    {
      "$ref": "./schema@v1.1.1#/definitions/basicProperties"
    }
  ],
  "required": [
    "schema", "version"
  ],
  "properties": {
    "type": {
      "const": "table"
    },
    "schema": {
      "oneOf": [
        {
          "$ref": "./row-meta-schema@v1.1.1"
        },
        {
          "type": "object",
          "required": ["$ref"],
          "additionalProperties": false,
          "properties": {
            "$ref": {
              "type": "string",
              "format": "uri-reference"
            }
          }
        }
      ]
    }
  }
}
