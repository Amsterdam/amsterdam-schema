{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/schema@v1.1.1#",
  "title": "Amsterdam Schema",
  "$vocabulary": {
    "https://json-schema.org/draft/2019-09/vocab/core": true,
    "https://schemas.data.amsterdam.nl/meta/auth@v1.1.1": false,
    "https://schemas.data.amsterdam.nl/meta/units@v1.1.1": false,
    "https://schemas.data.amsterdam.nl/meta/relation@v1.1.1": false,
    "https://schemas.data.amsterdam.nl/meta/provenance@v1.1.1": false
  },
  "$recursiveAnchor": true,
  "definitions": {
    "basicProperties": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "auth": {
          "$ref": "#/definitions/auth"
        },

        "dateCreated": {
          "type": "string",
          "format": "date-time"
        },

        "dateModified": {
          "type": "string",
          "format": "date-time"
        },

        "description": {
          "$ref": "#/definitions/description"
        },

        "id": {
          "$ref": "#/definitions/id"
        },

        "license": {
          "type": "string"
        },

        "provenance": {
          "$ref": "https://schemas.data.amsterdam.nl/meta/provenance@v1.1.1#properties/provenance"
        },

        "title": {
          "$ref": "#/definitions/title"
        },

        "type": {
          "$ref": "#/definitions/type"
        }
      }
    },

    "idString": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z][ A-Za-z0-9]*$"
    },
    "id": {
      "oneOf": [
        {
          "$ref": "#/definitions/idString"
        },
        {
          "type": "integer"
        }
      ]
    },
    "type": {
      "type": "string",
      "enum": ["dataset", "table"]
    },
    "schema": {
      "type": "string",
      "format": "uri-reference"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "contactPoint": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "email": {"type": "string"}
      }
    },
    "auth": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "allOf": [
    {
      "oneOf": [
        {
          "$ref": "./dataset@v1.1.1"
        },
        {
          "$ref": "./table@v1.1.1"
        },
        {
          "$ref": "./row-meta-schema@v1.1.1"
        }
      ]
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "dataset"
          }
        }
      },
      "then": {
        "$ref": "./dataset@v1.1.1"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "table"
          }
        }
      },
      "then": {
        "$ref": "./table@v1.1.1"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "$comment": "JSON Schema metaschemas for row data are JSON Schemas with type = object",
            "const": "object"
          }
        }
      },
      "then": {
        "$ref": "./row-meta-schema@v1.1.1"
      }
    }
  ]
}
