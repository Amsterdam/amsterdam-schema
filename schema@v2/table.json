{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/table@v2",
  "type": "object",
  "allOf": [
    {
      "$ref": "./schema@v2#/definitions/basicProperties"
    }
  ],
  "required": [
    "schema",
    "version"
  ],
  "properties": {
    "type": {
      "const": "table"
    },
    "dataclass": {
      "type": "string",
      "default": "structured",
      "enum": [
        "structured",
        "blob",
        "event"
      ]
    },
    "shortname": {
      "type": "string"
    },
    "derivedFrom": {
      "description": "id en table van de dataset waarvan deze dataset is afgeleid. Zie /datasets voor de mogelijke ids.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },    
    "crs": {
      "description": "Coordinate reference system",
      "$ref": "./schema@v2#/definitions/crs"
    },
    "temporal": {
      "type": "object",
      "required": [
        "identifier",
        "dimensions"
      ],
      "identifier": "string",
      "unit": "string",
      "dimensions": {
        "type": "object",
        "geldigOp": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "schema": {
      "oneOf": [
        {
          "$ref": "./row-meta-schema@v2"
        },
        {
          "type": "object",
          "required": [
            "$ref"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": {
              "type": "string",
              "format": "uri-reference"
            }
          }
        }
      ]
    }
  }
}
