{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/table@v3.2.0",
  "type": "object",
  "allOf": [
    {
      "$ref": "./schema@v3.2.0#/definitions/basicProperties"
    }
  ],
  "required": [
    "schema",
    "version",
    "lifecycleStatus"
  ],
  "properties": {
    "type": {
      "const": "table"
    },
    "dataclass": {
      "type": "string",
      "default": "structured",
      "enum": [
        "structured",
        "blob",
        "event"
      ]
    },
    "shortname": {
      "type": "string"
    },
    "derivedFrom": {
      "description": "id en table van de dataset waarvan deze dataset is afgeleid. Zie /datasets voor de mogelijke ids.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "crs": {
      "description": "Coordinate reference system",
      "$ref": "./schema@v3.2.0#/definitions/crs"
    },
    "temporal": {
      "type": "object",
      "required": [
        "identifier",
        "dimensions"
      ],
      "identifier": "string",
      "unit": "string",
      "dimensions": {
        "type": "object",
        "geldigOp": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "schema": {
      "oneOf": [
        {
          "$ref": "./row-meta-schema@v3.2.0"
        },
        {
          "type": "object",
          "required": [
            "$ref"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": {
              "type": "string",
              "format": "uri-reference"
            }
          }
        }
      ]
    },
    "lifecycleStatus": {
      "description": "de status die iets zegt over de stabiliteit van de tabel. Een tabel met de status 'experimental' kan nog wijzigen, wanneer deze 'stable' is kunnen er geen breaking changes meer in plaatsvinden.",
      "type": "string",
      "enum": [
        "experimental",
        "stable"
      ]
    },
    "rowLevelAuth": {
      "type": "object",
      "required": [
        "source",
        "targets",
        "authMap"
      ],
      "additionalProperties": false,
      "description": "Row Level Authorization: bepaal zichtbaarheid van een of meer kolom(men) (targets) op basis van de waarde van een andere kolom (source). De 'authMap' property geeft aan welke authorisatie nodig is om de target kolommen te bekijken in het geval de source true of false is.",
      "properties": {
        "source": {
          "type": "string",
          "description": "De kolom op basis waarvan zichtbaarheid wordt bepaald."
        },
        "targets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "De kolommen die worden afgeschermd zonder juiste authorisatie."
        },
        "authMap": {
          "type": "object",
          "properties": {
            "true": {
              "$ref": "https://schemas.data.amsterdam.nl/schema@v3.2.0#/definitions/auth"
            },
            "false": {
              "$ref": "https://schemas.data.amsterdam.nl/schema@v3.2.0#/definitions/auth"
            }
          },
          "required": [
            "true",
            "false"
          ],
          "description": "Een mapping waar de waarde van 'source' wordt gelinkt aan authorisatie die nodig is om 'targets' te mogen inzien.",
          "additionalProperties": false
        }
      }
    },
    "zoom": {
      "type": "object",
      "required": [
        "min",
        "max"
      ],
      "additionalProperties": false,
      "description": "Minimum (0-29) and maximum (1-30) zoom at which the fields should be visible in MVT views.",
      "properties": {
        "min": {
          "type": "integer",
          "minimum": 0,
          "maximum": 29
        },
        "max": {
          "type": "integer",
          "minimum": 1,
          "maximum": 30
        }
      }
    }
  }
}
