{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ams-schema.glitch.me/meta/class@v0.1",
  "type": "object",
  "allOf": [
    {
      "$ref": "./type@v0.1"
    }
  ],
  "required": [
    "schema"
  ],
  "properties": {
    "type": {
      "const": "class"
    },
    "schema": {
      "oneOf": [
        {
          "$ref": "./object@v0.1"
        },
        {
          "type": "object",
          "required": [
            "$ref"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": {
              "type": "string",
              "format": "uri-reference"
            }
          }
        }
      ]
    }
  },
  "not": {
    "required": [
      "items"
    ],
    "type": "object",
    "properties": {
      "items": {}
    }
  }
}
