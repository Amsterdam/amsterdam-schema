{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ams-schema.glitch.me/meta/dataset@v0.1",
  "type": "object",
  "allOf": [
    {
      "$ref": "type@v0.1"
    }
  ],
  "required": ["classes", "version"],
  "properties": {
    "type": {
      "const": "dataset"
    },
    "version": {
      "$ref": "https://ams-schema.glitch.me/schema@v0.1#/definitions/version"
    },
    "classes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "$ref": "class@v0.1"
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "$ref": {
                "type": "string",
                "format": "uri-reference"
              }
            }
          }
        ]
      }
    }
  }
}
