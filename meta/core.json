{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Amsterdam/amsterdam-schema/v0.0.1/meta/core.json",
  "type": "object",
  "$comment": "TODO: add properties for data quality",
  "definitions": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[0-9a-z]+([_-]?[0-9a-z]+)*$"
    },
    "dataset": {
      "type": "string"
    },
    "uri": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "year": {
      "$comment": "",
      "type": "integer"
    },
    "securityContext": {
      "$comment": "",
      "type": "string"
    }
  }
}