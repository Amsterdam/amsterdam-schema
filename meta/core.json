{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ams-schema.glitch.me/meta/core@v0.1",
  "type": "object",
  "$comment": "TODO: add properties for data quality",
  "definitions": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[0-9a-z]+([_-]?[0-9a-z]+)*$"
    },
    "dataset": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[0-9a-z]+([_-]?[0-9a-z]+)*$"
    },
    "type": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[0-9a-z]+([_-]?[0-9a-z]+)*$"
    },
    "uri": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "year": {
      "$comment": "This field should allow 4-digit years",
      "type": "integer"
    },
    "securityContext": {
      "$comment": "This field should hold authorization scope/context",
      "type": "string"
    }
  }
}
