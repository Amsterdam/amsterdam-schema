{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://static.amsterdam.nl/schemas/schema@v0.1#",
  "title": "Amsterdam Schema",
  "$vocabulary": {
    "https://json-schema.org/draft/2019-09/vocab/core": true,
    "https://static.amsterdam.nl/schemas/meta/auth@v1.0": false,
    "https://static.amsterdam.nl/schemas/units@v1.0": false,
    "https://static.amsterdam.nl/schemas/relation@v1.0": false,
    "https://static.amsterdam.nl/schemas/provenance@v1.0": false
  },
  "$recursiveAnchor": true,
  "definitions": {
    "basicProperties": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "type": {
          "$ref": "#/definitions/type"
        },
        "title": {
          "$ref": "#/definitions/title"
        },
        "description": {
          "$ref": "#/definitions/description"
        }
      }
    },
    "idString": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[0-9a-z]+(-?[0-9a-z]+)*$"
    },
    "id": {
      "oneOf": [
        {
          "$ref": "#/definitions/idString"
        },
        {
          "type": "integer"
        }
      ]
    },
    "type": {
      "type": "string",
      "enum": [
        "dataset",
        "table"
      ]
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "dataset": {
      "$ref": "#/definitions/idString"
    },
    "class": {
      "$ref": "#/definitions/idString"
    },
    "uri": {
      "type": "string",
      "format": "uri"
    },
    "year": {
      "type": "integer"
    },
    "version": {
      "type": "string",
      "minLength": 1
    }
  },
  "allOf": [
    {
      "oneOf": [
        {
          "$ref": "./dataset@v1.0"
        },
        {
          "$ref": "./table@v1.0"
        },
        {
          "$ref": "./row-meta-schema@v1.0"
        }
      ]
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "dataset"
          }
        }
      },
      "then": {
        "$ref": "./dataset@v1.0"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "table"
          }
        }
      },
      "then": {
        "$ref": "./table@v1.0"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "$comment": "JSON Schema metaschemas for row data are JSON Schemas with type = object",
            "const": "object"
          }
        }
      },
      "then": {
        "$ref": "./row-meta-schema@v1.0"
      }
    }
  ]
}