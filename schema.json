{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ams-schema.glitch.me/schema@v0.1#",
  "title": "Amsterdam Schema",
  "allOf": [
    {
      "oneOf": [
        {
          "$ref": "meta/type@v0.1"
        },
        {
          "$ref": "http://json-schema.org/draft-07/schema#"
        }
      ]
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "collection"
          }
        }
      },
      "then": {
        "$ref": "meta/collection@v0.1"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "dataset"
          }
        }
      },
      "then": {
        "$ref": "meta/dataset@v0.1"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "class"
          }
        }
      },
      "then": {
        "$ref": "meta/class@v0.1"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "object"
          }
        }
      },
      "then": {
        "$ref": "meta/object@v0.1"
      }
    }
  ]
}