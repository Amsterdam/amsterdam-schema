{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ams-schema.glitch.me/schema@v0.1#",
  "title": "Amsterdam Schema",
  "$vocabulary": {
    "https://json-schema.org/draft/2019-09/vocab/core": true,
    "https://ams-schema.glitch.me/meta/ams.auth@v0.1": false,
    "https://ams-schema.glitch.me/meta/ams.units@v0.1": false,
    "https://ams-schema.glitch.me/meta/ams.$ref.class@v0.1": false,
    "https://ams-schema.glitch.me/meta/ams.nullable@v0.1": false,
    "https://ams-schema.glitch.me/meta/ams.provenance@v0.1": false
  },
  "$recursiveAnchor": true,
  "definitions": {
    "idLike" : {
      "type": "string",
      "minLength": 1,
      "pattern": "^[0-9a-z]+(-?[0-9a-z]+)*$"
    },
    "id": {
      "oneOf": [
        {
          "$ref": "#/definitions/idLike"
        },
        {
          "type": "integer"
        }
      ]
    },
    "dataset": {
      "$ref": "#/definitions/idLike"
    },
    "class": {
      "$ref": "#/definitions/idLike"
    },
    "uri": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "pattern": "(?<=^v?|\\sv?)(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)(?:-(?:[1-9]\\d*|[\\da-z-]*[a-z-][\\da-z-]*)(?:\\.(?:[1-9]\\d*|[\\da-z-]*[a-z-][\\da-z-]*))*)?(?:\\+[\\da-z-]+(?:\\.[\\da-z-]+)*)?(?=$|\\s)"
    }
  },
  "allOf": [
    {
      "oneOf": [
        {
          "$ref": "meta/type@v0.1"
        },
        {
          "$ref": "http://json-schema.org/draft-07/schema#"
        }
      ]
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "dataset"
          }
        }
      },
      "then": {
        "$ref": "meta/dataset@v0.1"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "class"
          }
        }
      },
      "then": {
        "$ref": "meta/class@v0.1"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "object"
          }
        }
      },
      "then": {
        "$ref": "meta/object-schema@v0.1"
      }
    }
  ]
}